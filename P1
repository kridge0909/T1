    <script>
        // 1. 趋势折线图
        const ctxLine = document.getElementById('trendChart').getContext('2d');
        const trendChart = new Chart(ctxLine, {
            type: 'line',
            data: {
                labels: ['Mon', 'Tue', 'Wed', 'Thu', 'Fri', 'Sat', 'Sun'],
                datasets: [{
                    label: 'Instagram Engagement',
                    data: [12000, 19000, 15000, 25000, 22000, 30000, 28000],
                    borderColor: '#1E2329', // 法式深灰
                    backgroundColor: 'rgba(30, 35, 41, 0.05)',
                    tension: 0.4,
                    fill: true
                }, {
                    label: 'YouTube Views (x10)',
                    data: [15000, 12000, 20000, 18000, 25000, 35000, 32000],
                    borderColor: '#C6A87C', // 香槟金
                    borderDash: [5, 5],
                    tension: 0.4,
                    fill: false
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'top', align: 'end' }
                },
                scales: {
                    y: { grid: { borderDash: [2, 4], color: '#f0f0f0' } },
                    x: { grid: { display: false } }
                }
            }
        });

        // 2. 饼图
        const ctxPie = document.getElementById('pieChart').getContext('2d');
        const pieChart = new Chart(ctxPie, {
            type: 'doughnut',
            data: {
                labels: ['Instagram', 'YouTube', 'TikTok'],
                datasets: [{
                    data: [55, 30, 15],
                    backgroundColor: [
                        '#1E2329', // 深色主导
                        '#C6A87C', // 金色辅助
                        '#E0E0E0'  // 灰色其余
                    ],
                    borderWidth: 0
                }]
            },
            options: {
                cutout: '70%',
                plugins: {
                    legend: { position: 'bottom' }
                }
            }
        });
    </script>
